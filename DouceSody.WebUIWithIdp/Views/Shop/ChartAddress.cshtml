@model SelectList

@{
    ViewData["Title"] = "Address";
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<h1> Select your delivery address</h1>

<form asp-controller="Shop" asp-action="SelectDeliveryAddress" method="post">
    <p>
        @Html.DropDownList("addresses", Model)
    </p>
    <button  class="mt-3 btn btn-pay w-100 d-flex justify-content-between btn-lg rounded-0">
        Proceed to Payment
    </button>
</form>
